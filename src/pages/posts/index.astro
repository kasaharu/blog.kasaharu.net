---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../layouts/PageTitle.astro';

import '../../styles/global.css';

const posts = await getCollection('posts');
---

<Layout>
	<section>
	  <PageTitle title="posts" />
    <ul>
      {
        posts.map((post) => (
          <li class="p-3">
						<article class="group p-3 bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 overflow-hidden cursor-pointer">
              <a href=`/posts/${post.id}`>
								<div class="text-sm text-slate-500">
									<time datetime="{post.data.publishedAt}">{post.data.publishedAt}</time>
								</div>
								<h3 class="text-2l font-bold text-slate-900 mb-3 group-hover:text-blue-600 transition-colors duration-200">{post.data.title}</h3>
							</a>
						</article>
          </li>
        ))
      }
    </ul>
	</section>
</Layout>

<style>
	section {
		width: 800px;
	}
</style>
